! clear existing mod config
clear shift
clear lock
clear mod1
clear mod2
clear mod3
clear mod4
clear mod5

keycode 108 = Alt_R  ! use right Alt key
keycode 64  = Meta_L  ! use left Alt Key
keycode 66 = Hyper_L  ! use Caps Lock Key

add shift = Shift_L
add lock = Shift_R
add mod1 = Meta_R Meta_L
add mod2 = Alt_L Alt_R
add mod3 = Hyper_L Hyper_R
add mod4 = Super_L Super_R
add mod5 = Num_Lock